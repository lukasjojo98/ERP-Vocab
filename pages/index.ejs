<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body{
            background-color: rgb(93, 143, 201);
        }
        button{
            margin-left: 170px;
            margin-top: 20px;
        }
        .tableclass{
            margin: 20% auto;
        }
        .tableRow td{
            padding: 0px 50px;
            border-radius: 4px;
            background-color: white;
            box-shadow: 0 0 3px white;
        }
        .tableRow2 td{
            padding: 0px 50px;
            border-radius: 4px;
        }
        #inputText{
        margin: 10px;
        border-radius: 4px;
        border:none;
        box-shadow: none;
        color: rgb(77, 76, 76) !important;
        background-color: lightblue;
        height: 20px;
            }


.modal {
  display: none; /* Hidden by default */
  position: fixed; /* Stay in place */
  z-index: 1; /* Sit on top */
  padding-top: 100px; /* Location of the box */
  left: 0;
  top: 0;
  width: 100%; /* Full width */
  height: 100%; /* Full height */
  overflow: auto; /* Enable scroll if needed */
  background-color: rgb(0,0,0); /* Fallback color */
  background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
}

/* Modal Content */
.modal-content {
  background-color: rgb(68, 84, 102);
  display: flex;
  margin: 0 auto;
  padding: 10px 20px;
  border: 1px solid #888;
  width: 50%;
  border-radius: 4px;
}
    </style>
</head>
<form action="/results" method="get"><input type="submit" value="Results"></form>
<body>
    <table class="tableclass">
        <tr class="tableRow">
            <td style="width: 163px; height:54px;"><p align="middle"><%=textObject["English"]%></p></td>
            <td><input type="text" name="inputText" id="inputText" placeholder="Deine Übersetzung..."></td>
        </tr>
        <tr class="tableRow2">
            <td colspan="2"><button id="checkbutton">Check answer</button></td>
        </tr>
    </table>
    <div class="modal" id="myModal">
        <div class="modal-content">
            <table class="tableclass">
                <tr class="tableRow">
                    <td style="width: 163px; height:54px;"><p align="middle"><%=textObject["English"]%></p></td>
                    <td><input type="text" name="inputText" id="inputTextCheck" placeholder="Deine Übersetzung..." value=""></td>
                </tr>
                <tr class="tableRow2">
                    <td colspan="2"><div style="text-align: center; background-color: rgb(0, 176, 33); padding: auto; border-radius: 4px;"><p>Right Answer: <strong><%=textObject["deutsch"]%></strong></p></div></td>
                </tr>
                <tr class="tableRow2">
                    <form action="/" method="post">
                        <input type="hidden" style="display:none;" value="<%=textObject['_id']%>" name="textObjectid"> 
                    <td colspan="2" style="padding: 0px 185px;">
                        <input type="checkbox" name="Bad">
                        <label for="Bad">Bad</label>
                        <input type="checkbox" name="Good">
                        <label for="Good">Good</label>
                        <input type="checkbox" name="Perfect">
                        <label for="Perfect">Perfect</label>
                    </div></td>
                </tr>
                <tr class="tableRow2">
                    <td colspan="2"><input type="submit" value="Submit rating">
                    </td>
                </tr>
            </form>
            </table>
        </div>
    </div>
</body>
<script >
    var modal = document.getElementById("myModal");
    window.onclick = function(event) {
  if(event.target == document.getElementById("checkbutton")){
    modal.style.display = "block";
    document.getElementById("inputTextCheck").value = document.getElementById("inputText").value; 
  }
  else if (event.target == modal){
  modal.style.display = "none";
  }
}
</script>
</html>